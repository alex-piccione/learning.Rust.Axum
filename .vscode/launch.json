{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "lldb",
            "request": "launch",            
            "cargo": {
                "args": [
                    "build",
                    "--bin=api_axum",
                    "--package=api_axum"
                ],
            },
            "cwd": "${workspaceFolder}\\src", // this path is required to find the configuration file
            "env": {
                //"CONFIGURATION_FILE": "/d/Programming/projects/pc-axum-api/configuration.json"
            }   
        },
        {
            "name": "Unit tests",
            "type": "lldb",
            "request": "launch",            
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=api_axum",
                    "--package=poc-axum"
                ],
                "filter": {
                    "name": "poc-axum",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}